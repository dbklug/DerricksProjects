<?xml version="1.0" encoding="utf-8"?>
<!--Parent Layout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7FFF00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unmatchedColorLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Unmatched Color:"
            android:textSize="18dp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonRed"
                android:onClick="changeUnmatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Red" />

            <RadioButton
                android:id="@+id/radioButtonBlue"
                android:onClick="changeUnmatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Blue" />

            <RadioButton
                android:id="@+id/radioButtonYellow"
                android:onClick="changeUnmatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Yellow" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00CED1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/matchedColorLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Matched Color:"
            android:textSize="18dp"/>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonPurple"
                android:onClick="changeMatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Purple" />

            <RadioButton
                android:id="@+id/radioButtonOrange"
                android:onClick="changeMatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Orange" />

            <RadioButton
                android:id="@+id/radioButtonGreen"
                android:onClick="changeMatchedColor"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Green" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7FFF00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/triesLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Tries:"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/numberOfTries"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:layout_gravity="center_vertical"
            android:text="# of tries"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:id="@+id/matchesLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:text="Matches:" />

        <EditText
            android:id="@+id/numberOfMatches"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="none"
            android:layout_gravity="center_vertical"
            android:text="# of matches"
            android:textSize="18dp"
            android:focusable="false"
            android:clickable="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00CED1"
        android:orientation="vertical">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:text="Reset Board" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn1"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn2"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn3"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn4"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn5"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn6"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn7"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn8"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn9"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn10"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn11"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/imageBtn12"
            android:onClick="matchImage"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>


</LinearLayout>

